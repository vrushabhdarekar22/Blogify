<!DOCTYPE html>
<html lang="en">
<head>
    <%-include('partials/head')%>
    <title>Homepage</title>
</head>
<body>
    <%-include('partials/nav')%>
    <div class="container mt-3 mb-3 d-flex flex-wrap gap-3">
    <% blogs.forEach(blog => { %>
        <div class="card" style="width: 15rem; height: 300px;">
            <img src="<%= blog.coverImageURL %>" class="card-img-top" style="height: 200px; object-fit: cover;">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= blog.title %></h5>
                <a href="/blog/<%= blog._id%>" class="btn btn-primary mt-auto">View</a>
            </div>
        </div>
    <% }) %>
    </div>

    <%-include('partials/scripts')%>
</body>
</html>